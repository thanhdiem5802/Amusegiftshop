@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Coffee.DATA.Models.New
<main>
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-overlay="dark" data-opacity="5" data-background="../assets/images/bg/testimonial-bg-2.jpg">
        <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Bài viết về Cafena</h2>
                    <div class="cafena-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="cafenabcrumb-item duxinbcrumb-begin">
                                <a asp-controller="Home" asp-action="Index"><span>Trang chủ</span></a>
                            </li>
                            <li class="cafenabcrumb-item duxinbcrumb-end">
                                <span>Bài viết</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="blog-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="blog__wrapper blog__wrapper--single">
                        <article class="blog__post blog__post--single format format-image">
                            <div class="thumb">
                                <img src="@Model.Image" alt="">
                            </div>
                            <ul class="meta mt-20 list-unstyled d-flex align-items-center">
                                <li><a href="javascript:void(0)"><i class="fal fa-file"></i> Coffee</a></li>
                                <li><a href="javascript:void(0)"><i class="fal fa-calendar-alt"></i> @(Convert.ToDateTime(Model.CreatedOn).ToString("dd/MM/yyyy HH:mm:ss"))</a></li>
                            </ul>
                            <div class="content mt-10">
                                @Html.Raw(Model.Content)
                            </div>
                            <div class="tag-social-wrapper mt-30">
                                <div class="row">
                                    <div class="col-md-12 social-share-wrapper text-left text-md-end">
                                        <h4>Chia sẻ</h4>
                                        <div class="social-share">
                                            <a href="javascript:void(0)" onclick="shareOnFacebook()"><i class="fab fa-facebook-f"></i></a>
                                            <a href="#0"><i class="fab fa-twitter"></i></a>
                                            <a href="#0"><i class="fab fa-google-plus-g"></i></a>
                                            <a href="#0"><i class="fab fa-instagram"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        // Hàm chia sẻ bài viết lên Facebook
        function shareOnFacebook() {
            // URL của bài viết bạn muốn chia sẻ
            var url = window.location.href;
            // Mở cửa sổ chia sẻ Facebook
            window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(url), 'facebook-share-dialog', 'width=400,height=700');
            return false;
        }
    </script>
}